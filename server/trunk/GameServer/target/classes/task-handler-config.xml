<?xml version="1.0" encoding="UTF-8" ?>
<tasks name="定时任务">
	<task uid="1" id="TaskForDay" name="每日任务" description="每日任务更新">
		<handler class="com.t4game.mmorpg.core.server.servertaskimpl.CommonUpdateTaskImpl" parameter="com.doteyplay.game.persistence.yunyingresource.timertaskmanager.TimerTaskManagerDataProvider"/>
		<!-- 这个执行时间是有限制的.只能是每日，每周，每月，每年这样的，不能每20分钟。写了也不支持 -->
		<time cron-expression="0 0 3 * * ?" precision="2"/>
		<items>
			<package value="com.doteyplay.game.service.servertaskimpl.day">
				<exclude class="com.doteyplay.game.service.servertaskimpl.day.DayTaskItemContainer"/>
			</package>
			<include class="com.doteyplay.game.service.servertaskimpl.day.RoleDailyGuiderItem" order="100"/>
		</items>
	</task>
	<task uid="2" id="TaskForDayPM" name="每日下午任务" description="每日下午任务更新">
		<handler class="com.t4game.mmorpg.core.server.servertaskimpl.CommonUpdateTaskImpl" parameter="com.doteyplay.game.persistence.yunyingresource.timertaskmanager.TimerTaskManagerDataProvider"/>
		<!-- 这个执行时间是有限制的.只能是每日，每周，每月，每年这样的，不能每20分钟。写了也不支持 -->
		<time cron-expression="0 0 15 * * ?" precision="2"/>
		<items>			
			<include class="com.doteyplay.game.service.servertaskimpl.day.UpdateRoleObjectiveItem" order="0"/>
		</items>
	</task>
	<task uid="3" id="TaskForWeek" name="每周计划" description="每周任务更新">
		<handler class="com.t4game.mmorpg.core.server.servertaskimpl.CommonUpdateTaskImpl" parameter="com.doteyplay.game.persistence.yunyingresource.timertaskmanager.TimerTaskManagerDataProvider"/>
		<!-- 这个执行时间是有限制的.只能是每日，每周，每月，每年这样的，不能每20分钟。写了也不支持 -->
		<time cron-expression="0 1 12 ? * 2" precision="2"/>
		<items>			
			<package value="com.doteyplay.game.service.servertaskimpl.week">
				<exclude class="com.doteyplay.game.service.servertaskimpl.week.WeekTaskItemContainer"/>
			</package>
		</items>
	</task>
	<task uid="4" id="TaskForMonth" name="每月任务" description="每月任务更新">
		<handler class="com.t4game.mmorpg.core.server.servertaskimpl.CommonUpdateTaskImpl" parameter="com.doteyplay.game.persistence.yunyingresource.timertaskmanager.TimerTaskManagerDataProvider"/>
		<!-- 这个执行时间是有限制的.只能是每日，每周，每月，每年这样的，不能每20分钟。写了也不支持 -->
		<time cron-expression="0 1 12 1 * ?" precision="2"/>
		<items>			
			<package value="com.doteyplay.game.service.servertaskimpl.month">
				<exclude class="com.doteyplay.game.service.servertaskimpl.month.MonthTaskItemContainer"/>
			</package>
		</items>
	</task>
	
</tasks>


