<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	 "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ItemBean">
	<typeAlias alias="itemBean" type="com.doteyplay.game.domain.gamebean.ItemBean" />

	<insert id="insertItemBean" parameterClass="itemBean">
		INSERT INTO
		t_item
		(
			roleId,itemId,itemNum,dressedSpriteId
		)
		VALUES
		(
			 #roleId#,#itemId#,#itemNum#,#dressedSpriteId#
		)
	</insert>


	<select id="selectItemBeanListByRoleId" resultClass="itemBean"
		parameterClass="long">
		roleId,itemId,itemNum,dressedSpriteId 
		FROM t_item
		WHERE roleId =
		#value#
	</select>

	<select id="updateItemBean" parameterClass="itemBean">
		update 
		t_item 
		set 
		roleId = #roleId#,
		itemId = #itemId#,
		itemNum = #itemNum# 
		WHERE roleId=#roleId# and itemId=#itemId# and dressedSpriteId=0
	</select>


	<delete id="deleteItemBean" parameterClass="itemBean">
		delete 
		from 
		t_item  
		WHERE roleId=#roleId# and itemId=#itemId# and dressedSpriteId=#dressedSpriteId#
	</delete>
	
	<delete id="deleteItemBeanByDressedSpriteId" parameterClass="long">
		delete 
		from 
		t_item  
		WHERE dressedSpriteId=#dressedSpriteId#
	</delete>
	
</sqlMap>
