#include "DramaAni.h"
#include "FightMgr.h"
DramaAni* dram=nullptr;

DramaAni* DramaAni::getInstance()
{
    if(dram==nullptr){
        dram=new DramaAni();
    }
    return dram;
}

bool DramaAni::init()
{
	if(!BaseUI::init("publish/DramaAni.json"))
	{
		return false;
	}
	//如果需要对cocostudio 设计的ui进行调整

	return true;
}

