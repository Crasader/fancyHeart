#include "FData.h"
FData* create(int roleID)
{
    FData* pRet=new FData();
    if(pRet)
    {
        pRet->roleID=roleID;
        pRet->autorelease();
        return pRet;
    }
    else
    {
        CC_SAFE_DELETE(pRet);
        pRet=nullptr;
        return nullptr;
    }
}

