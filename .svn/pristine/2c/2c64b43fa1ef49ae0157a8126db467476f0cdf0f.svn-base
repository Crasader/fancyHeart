<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	 "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="RoleBean">
	<typeAlias alias="roleBean" type="com.doteyplay.game.domain.gamebean.RoleBean" />

	<insert id="insertRoleBean" parameterClass="roleBean">
		INSERT INTO
		t_role
		(
			id,userId,name, level,areaId,exp,money,rmb,energy,vipLevel,lastLoginTime,lastLogoutTime,createTime,spriteId
		)
		VALUES
		(
			#id#,#userId#,#name#,#level#,#areaId#,#exp#,#money#,#rmb#,#energy#,#vipLevel#,#lastLoginTime#,#lastLogoutTime#,#createTime#,#spriteId# 
		)
	</insert>

	<select id="selectRoleBean" resultClass="roleBean"
		parameterClass="long">
		SELECT
		id,
		userId,
		name,
		level,
		areaId,
		exp,
		money,
		rmb,
		energy,
		lastLoginTime,
		lastLogoutTime,
		createTime,
		spriteId,
		vipLevel
		 
		FROM t_role
		WHERE id =
		#value#
	</select>
	
	<select id="selectRoleBeanByUserId" resultClass="roleBean"
		parameterClass="java.util.Map">
		SELECT
		id,
		userId,
		name,
		level,
		areaId,
		exp,
		money,
		rmb,
		energy,
		lastLoginTime,
		lastLogoutTime,
		createTime,
		spriteId,
		vipLevel
		 
		FROM t_role
		WHERE userId = #userId# and areaId = #areaId#
	</select>

	<select id="selectRoleBeanByName" resultClass="roleBean"
		parameterClass="String">
		SELECT
		id,
		userId,
		name,
		level,
		areaId,
		exp,
		money,
		rmb,
		energy,
		lastLoginTime,
		lastLogoutTime,
		createTime,
		spriteId,
		vipLevel  
		FROM t_role
		WHERE name =
		#value#
	</select>

	<update id="updateRoleBean" parameterClass="roleBean">
		update 
		t_role 
		set 
		userId = #userId#,
		name = #name#,
		level = #level#,
		areaId = #areaId#,
		exp = #exp#,
		money = #money#,
		rmb = #rmb#,
		energy = #energy#,
		lastLoginTime = #lastLoginTime#,
		lastLogoutTime = #lastLogoutTime#,
		spriteId=#spriteId,#,
		vipLevel = #vipLevel#
	
		WHERE id =
		#id#
	</update>

</sqlMap>
